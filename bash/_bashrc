
PATH=$PATH:~/bin
export PATH

export OSVER=$(uname -s)
export PAGER=less
export LESS='-R'
export EDITOR=vi

# set command line mode to vi mode
set -o vi

# Case-insensitive globbing (used in pathname expansion)
shopt -s nocaseglob

# Append to the Bash history file, rather than overwriting it
shopt -s histappend

# Autocorrect typos in path names when using `cd`
shopt -s cdspell

# check the window size
shopt -s checkwinsize

# setup bash prompt but only if we are in an xterm like terminal
# consoles may not like all of the features
if [[ ${TERM} =~ xterm* ]]; then
    source "${HOME}/.bash/prompt.sh"
else
    unset PROMPT_COMMAND
    export PS1="[CONSOLE] \u@\h:\w \\$ "
fi

# colorize things
source "${HOME}/.bash/colorize.sh"

# common aliases
source "${HOME}/.bash/aliases.sh"

# source private configs (things you don't want shared between machines)
if [[ -f  ${HOME}/.bash/private.sh ]]; then
    source "${HOME}/.bash/private.sh"
fi


# Homebrew cask
export HOMEBREW_CASK_OPTS="--appdir=/Applications"


